---
const logos = [
  
  { name: 'HTML', url: '/logos/html.svg' },
  { name: 'CSS', url: '/logos/css.svg' },
  { name: 'JavaScript', url: '/logos/javascript.svg' },
  { name: 'TypeScript', url: '/logos/typescript.svg' },                                                  
  { name: 'React', url: '/logos/react.svg' },
  { name: 'Node.js', url: '/logos/nodejs.svg' },
  { name: 'Python', url: '/logos/python.svg' },
  {name:  'Astro',url:'/logos/astro.svg'},
  {name:  'Git',url:'/logos/git.svg'},
  {name:  'Figma',url:'/logos/figma.svg'}, 
  {name:  'Docker',url:'/logos/docker.svg'},
  {name:  'MySql',url:'/logos/mysql.svg'},
  {name:  'Mongodb',url:'/logos/mongodb.svg'},
  {name:  'Netlify',url:'/logos/netlify.svg'}, 
  {name:  'Bootstrap',url:'/logos/bootstrap5.svg'}, 
  {name:  'Npm',url:'/logos/npm.svg'}, 
  {name:  'Sass',url:'/logos/sass.svg'},                                                                         

];                           
 
---
<div class="tech-sphere">

    <div class="sphere">
      {logos.map((logo, index) => (
        <div 
          class="logo-container" 
          style={`--index: ${index}; --total: ${logos.length}`}
        >
          <img 
            src={logo.url} 
            alt={`${logo.name} logo`} 
            class="tech-logo"
            width="30"
            height="30"
          />
        </div>
      ))}
    </div>
  </div>
  
  <style>
    .tech-sphere {
      position: relative;
      width: 300px;
      height: 300px;
      margin: 4rem auto;
      perspective: 1000px;
    }
  
    .sphere {
      position: relative;
      width: 100%;
      height: 100%;
      transform-style: preserve-3d;
      animation: rotate-sphere 30s linear infinite;
    }
  
    .center-circle {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 50px;
      height: 50px;
      background: rgb(var(--accent));
      border-radius: 50%;
      box-shadow: 0 0 20px rgba(var(--accent), 0.5);
    }
  
    .logo-container {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 40px;
      height: 40px;
      margin: -20px;
      transform-style: preserve-3d;
      animation: orbit-sphere 20s linear infinite;
      animation-delay: calc(var(--index) * -1.5s);
    }
  
    .tech-logo {
      width: 100%;
      height: 100%;
      object-fit: contain;
      filter: drop-shadow(0 0 8px rgba(var(--accent-light), 0.5));
      animation: counter-rotate 20s linear infinite;
    }
  
    @keyframes rotate-sphere {
      from {
        transform: rotateY(0deg) rotateX(-20deg);
      }
      to {
        transform: rotateY(360deg) rotateX(-20deg);
      }
    }
  
    @keyframes orbit-sphere {
      from {
        transform: 
          rotateY(calc(var(--index) * (360deg / var(--total))))
          rotateX(calc(var(--index) * 40deg))
          translateZ(120px);
      }
      to {
        transform: 
          rotateY(calc(360deg + var(--index) * (360deg / var(--total))))
          rotateX(calc(var(--index) * 45deg))
          translateZ(120px);
      }
    }
  
    @keyframes counter-rotate {
      from {
        transform: rotate(360deg);
      }
      to {
        transform: rotate(0deg);
      }
    }
  </style>