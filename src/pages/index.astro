---
import Main from '../layouts/Main.astro';
import NavCards from '../components/UI/NavCards.astro';
import HomeHeader from '../components/Home/HomeHeader.astro';
import ProjectCard from '../components/Project/ProjectCard.astro';
import Experiences from "../components/Experiences.astro"

const combinedTechStyles = {
  // Updated modern, harmonious tech colors
  React: 'text-[#58C4DC] bg-[#58C4DC]',
  HTML5: 'text-[#F97316] bg-[#F97316]',
  Javascript: 'text-[#F59E0B] bg-[#F59E0B]',
  CSS3: 'text-[#06B6D4] bg-[#06B6D4]',
  CSS: 'text-[#06B6D4] bg-[#06B6D4]',
  Python: 'text-[#8B5CF6] bg-[#8B5CF6]',
  Langchain: 'text-[#10B981] bg-[#10B981]',
  Pandas: 'text-[#6366F1] bg-[#6366F1]',
  NumPy: 'text-[#3B82F6] bg-[#3B82F6]',
};
---

<Main title="Cristina Egusquiza Portfolio">
  <HomeHeader />
  <NavCards />
  <div class="mb-5"></div>
  <div class="experiences bg-blue-500" ></div>
    <h2>PICK OF MY PROJECTS</h2>
  <div class="mb-5"></div>
 </div>
  <div class="animate">
    <ProjectCard
      title="Wine AI Web"
      description="A web app to recommend the best wines with an AI Sommelier!"
      technologies={['Python', 'Langchain', 'NumPy', 'CSS']}
      href="https://wine-ia-web.fly.dev/home"
      imgSrc="/images/screencapture-wine-ia-web-fly-dev-home-2025-10-23-11_15_39.jpg"
      imgAlt="Wine AI Web - AI Sommelier Application"
      techColors={combinedTechStyles}
    />
  </div>
  <div class="mb-5"></div>
  <div class="experiences">
     <h2>WORK EXPERIENCES & STUDIES</h2>
  </div>
  <Experiences />
</Main>
